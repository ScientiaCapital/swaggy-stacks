          "type": "prometheus",
          "uid": "prometheus"
        },
        "definition": "label_values(trading_pnl_total_usd, symbol)",
        "hide": 0,
        "includeAll": true,
        "label": "Symbol",
        "multi": true,
        "name": "symbol",
        "options": [],
        "query": {
          "query": "label_values(trading_pnl_total_usd, symbol)",
          "refId": "StandardVariableQuery"
        },
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      },
      {
        "allValue": ".*",
        "current": {
          "selected": false,
