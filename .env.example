# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=trading_system
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379

# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Trading Settings
DEFAULT_POSITION_SIZE=1000.0
MAX_POSITION_SIZE=10000.0
MAX_DAILY_LOSS=500.0
RISK_FREE_RATE=0.02

# Market Data
MARKET_DATA_UPDATE_INTERVAL=1
MAX_SYMBOLS=50

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO

# AI & Machine Learning Features (Optional)
# Set to 'true' to enable ML features (requires torch, transformers, sentence-transformers)
ML_FEATURES_ENABLED=false

# Embedding service type: 'auto', 'local', 'mock'
# - 'auto': Automatically choose based on ML_FEATURES_ENABLED and available dependencies
# - 'local': Use LocalEmbeddingService with torch/transformers (requires ML dependencies)
# - 'mock': Use MockEmbeddingService for testing/lightweight deployments (no ML dependencies)
EMBEDDING_SERVICE_TYPE=auto

# Local embedding model (only used when EMBEDDING_SERVICE_TYPE=local)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
USE_MPS_DEVICE=true

# Markov analysis settings
MARKOV_LOOKBACK_PERIOD=100
MARKOV_N_STATES=5

# External AI APIs (Optional)
OPENAI_API_KEY=your-openai-api-key-if-using
OLLAMA_BASE_URL=http://localhost:11434

# TaskMaster-AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key-optional
GOOGLE_API_KEY=your-google-api-key-optional
MISTRAL_API_KEY=your-mistral-api-key-optional

# GitHub Integration (Optional)
GITHUB_TOKEN=your-github-token-for-automation
WEBHOOK_SECRET=your-webhook-secret-for-github